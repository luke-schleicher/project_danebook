<section id="interior-page">

  <div class="container">
    <h1>Welcome <%= @user.email %></h1>
    <%= link_to "Sign Out", logout_path, method: :delete %>
    <hr>
  </div>

  <%= render partial: "header", locals: { user: @user } %>
  
  <main class="container">
    <div class="row">
      <div class="panel panel-default col-xs-offset-1 col-xs-10">
        <div class="panel-heading row">
          <div class="panel-title">
            <h2 class="text-center">About</h2>
          </div>
        </div>
        <div class="panel-body">
          <div class="row bottom-box">
            <div class="col-md-6 col1">

              <%= form_for @user do |f| %>

                <div class="row">
                  <div class="col-sm-6">

                    <h3>Basic Information</h3>

                    <%= f.label :birth_month %>
                    <%= f.text_field :birth_month %>

                    <%= f.label :birth_day %>
                    <%= f.text_field :birth_day %>

                    <%= f.label :birth_year %>
                    <%= f.text_field :birth_year %>

                    <%= f.label :college %>
                    <%= f.text_field :college %>

                    <%= f.label :hometown %>
                    <%= f.text_field :hometown %>

                    <%= f.label :current_town %>
                    <%= f.text_field :current_town %>

                    <h3>Contact Information</h3>

                    <%= f.label :email %>
                    <%= f.text_field :email %>

                    <%= f.label :phone %>
                    <%= f.text_field :phone %>                    

                  </div>
                  <div class="col-sm-6">

                    <h3>Words to Live By</h3>

                    <%= f.label :words_to_live_by %>
                    <%= f.text_area :words_to_live_by %>

                    <h3>About Me</h3>

                    <%= f.label :about_me %>
                    <%= f.text_area :about_me %>

                  </div>
                </div>

                <div class="row">
                  <div class="col-xs-12 text-center rs30">
                    <%= f.submit 'Save Changes', class: 'btn btn-success btn-lg' %>
                  </div>
                </div>

              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </main>