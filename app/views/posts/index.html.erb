<section id="interior-page">

  <div class="container">
    <h1>Welcome <%= current_user.full_name %></h1>
    <%= link_to "Sign Out", logout_path %>
    <hr>
  </div>

  <%= render partial: "shared/header", locals: { user: @user } %>

  <main class="container">
    <div class="row">
      <div class="panel panel-default col-xs-offset-1 col-xs-10">

      
        <div class="row bottom-box">
          <div class="col-sm-5">
            <%= render partial: "shared/about", locals: { user: @user } %>
            <%= render partial: "shared/photos" %>
            <%= render partial: "shared/friends" %>
          </div>

          <div class="col-sm-7">
            <%= render partial: "form", locals: { user: @user, post: @post } %>
            <%= render partial: "post", locals: { user: @user, post: @post, posts: @posts } %>
            <%#= render partial: "shared/post_cruft" %>
          </div>
        </div>

      </div>
    </div>
  </main>

</section>

